<?xml version="1.0" encoding="utf-8"?>

<!-- this will be the layout for the resource tab -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--this is the tab layout view -->
    <android.support.design.widget.TabLayout
        android:id="@+id/resource_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@android:color/holo_purple"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/holo_green_light"
        app:tabIndicatorColor="@android:color/holo_green_light"
        app:tabMode="fixed" />
    <!-- what s tabMode fixed?????? -->



    <android.support.v4.view.ViewPager
        android:id="@+id/resource_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- inside the ViewPager it is important to set the heigth to wrap content to see the fragment words?? -->







</LinearLayout>