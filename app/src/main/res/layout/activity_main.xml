<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pitonneux.les_pitonneux.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/title_image"
        android:tint="@color/lesPitonneuxTintBlack" />

    <ImageView
        android:id="@+id/pitonneux_logo"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:src="@drawable/logo_vert_fond_transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>


    <!-- <TextView
         android:id="@+id/les_pitonneux_text_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="25dp"
         android:background="@android:color/black"
         android:fontFamily="sans-serif"
         android:padding="16dp"
         android:text="$ les_pitonneuxâ–ˆ"
         android:textColor="@android:color/holo_green_dark"
         android:textSize="35sp" />-->

    <!--android:layout_below="@+id/les_pitonneux_text_view"-->

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pitonneux_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Montreal's talent incubator"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="italic" />

    <!-- android:background="@drawable/test_button_color" -->
    <Button
        android:id="@+id/sign_in_google_button"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:text="Gmail sign in"
        android:textColor="@color/lesPitonneuxTransparentBlack"/>


    <Button
        android:id="@+id/sign_in_slack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_google_button"
        android:layout_centerHorizontal="true"
        android:text="Slack sign in"

        android:textColor="@color/lesPitonneuxTransparentBlack"/>



    <Switch
        android:id="@+id/switch_language_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Francais"
        android:textColor="@android:color/white" />


</RelativeLayout>
